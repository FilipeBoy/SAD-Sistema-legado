@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>Relatório Gráfico Geral</h2>
    </div>
    <div class="col-sm-4">
        <div class="title-action">
            @Html.ActionLink("Voltar", "../Home/Inicio", new { }, htmlAttributes: new { @class = "btn btn-white" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content  text-center">
                <h3>Tipo de usuários</h3>
             </div>
            <div class="ibox-content">
                <div>
                    <canvas id="doughnutChart1" height="140"></canvas>
                </div>
              </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content  text-center">
                <h3>Evolução de cadastros</h3>
                            </div>
            <div class="ibox-content">
                <div>
                    <canvas id="slineChart" height="140"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content  text-center">
                <h3>Avaliações mês</h3>
                            </div>
            <div class="ibox-content">
                <div>
                    <canvas id="barChart1" height="140"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content  text-center">
                <h3>Status das avalições</h3>
            </div>
            <div class="ibox-content">
                <div>
                    <canvas id="barChart2" height="140"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content  text-center">
                <h3>Acertos de decisão</h3>
                <p>Sugestão igual a feedback estratégia adotada</p>
            </div>
            <div class="ibox-content">
                <div>
                    <canvas id="doughnutChart2" height="140"></canvas>
                </div>
              </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/chartjs")
    <script type="text/javascript">
        $.ajax({
            type: "POST",
            url: "/Relatorios/GraficoDoug1",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (mems) {
                var aData = mems;
                var aLabels = aData[0];
                var aDatasets1 = aData[1];
                
                var doughnutData = {
                    labels: aData[0],
                    datasets: [{
                        data: aData[1],
                        backgroundColor: ["#a3e1d4", "#dedede", "#b5b8cf"]
                    }]
                };

                var doughnutOptions = {
                    responsive: true
                };
        
                var ctx4 = document.getElementById("doughnutChart1").getContext("2d");
                new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
            }
        });
        $.ajax({
            type: "POST",
            url: "/Relatorios/GraficoLine1",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (mems) {
                var aData = mems;
                var aLabels = aData[0];
                var aDatasets1 = aData[1];

                var dataT = {
                    labels: aLabels,
                    datasets: [{
                        label: 'Quantidade',
                        data: aDatasets1,
                        fill: false,
                        backgroundColor: '#a3e1d4',
                        pointBorderColor: "#fff"
                    }]
                };
                var ctx = $("#slineChart").get(0).getContext("2d");
                var myNewChart = new Chart(ctx, {
                    type: 'bar',
                    data: dataT,
                    options: {
                        responsive: true,
                        legend: { position: 'bottom' },
                        scales: {
                            xAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' } }],
                            yAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' }, ticks: { stepSize: aData[1], beginAtZero: true } }]
                        },
                    }
                });

            }
        });
        $.ajax({
            type: "POST",
            url: "/Relatorios/GraficoBar1",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (mems) {
                var aData = mems;
                var aLabels = aData[0];
                var aDatasets1 = aData[1];
                
                var dataT = {
                    labels: aLabels,
                    datasets: [{
                        label: 'Quantidade',
                        data: aDatasets1,
                        fill: false,
                        backgroundColor: '#a3e1d4',
                        pointBorderColor: "#fff"
                    }]
                };
                var ctx = $("#barChart1").get(0).getContext("2d");
                var myNewChart = new Chart(ctx, {
                    type: 'bar',
                    data: dataT,
                    options: {
                        responsive: true,
                        legend: { position: 'bottom' },
                        scales: {
                            xAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' } }],
                            yAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' }, ticks: { stepSize: aData[1] , beginAtZero: true } }]
                        },
                    }
                });

            }
        }); $.ajax({
            type: "POST",
            url: "/Relatorios/GraficoBar2",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (mems) {
                var aData = mems;
                var aLabels = aData[0];
                var aDatasets1 = aData[1];
                var dataT = {
                    labels: aLabels,
                    datasets: [{
                        label: 'Quantidade',
                        data: aDatasets1,
                        fill: false,
                        backgroundColor: '#a3e1d4',
                        pointBorderColor: "#fff"
                    }]
                };
                var ctx = $("#barChart2").get(0).getContext("2d");
                var myNewChart = new Chart(ctx, {
                    type: 'bar',
                    data: dataT,
                    options: {
                        responsive: true,
                        legend: { position: 'bottom' },
                        scales: {
                            xAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' } }],
                            yAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' }, ticks: { stepSize: aData[1], beginAtZero: true } }]
                        },
                    }
                });

            }
        });
        $.ajax({
            type: "POST",
            url: "/Relatorios/GraficoDoug2",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (mems) {
                var aData = mems;
                var doughnutData = {
                    labels: aData[0],
                    datasets: [{
                        data: aData[1],
                        backgroundColor: ["#a3e1d4", "#dedede", "#b5b8cf"]
                    }]
                };
                
                var doughnutOptions = {
                    responsive: true
                };
                
                var ctx4 = document.getElementById("doughnutChart2").getContext("2d");
                new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
            }
        });
    </script>
}