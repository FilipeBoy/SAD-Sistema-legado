
@{
    ViewBag.Title = "Inicio";
}

@if (Session["Papel"] != null)
{
    if (Session["Papel"].ToString().Equals("Admin"))
    {
        <div class="row" style="margin-top:10%">
            <div class="col-lg-3 text-center">
                <a href="../Usuarios/Index"><img src="~/Images/Users.png" style="width:20%"></a>
                <h4 class="w3-text-black">Usuários</h4>
            </div>
            <div class="col-lg-3 text-center">
                <a href="../Avaliacaos/Index"><img src="~/Images/avaliacao.png" alt="Boss" style="width:20%" class="w3-circle w3-hover-opacity"></a>
                <h4 class="w3-text-black">Avaliações de sistemas</h4>
            </div>
            <div class="col-lg-3 text-center">
                <a href="../Feedbacks/Index"><img src="~/Images/feedback.png" alt="Boss" style="width:30%" class="w3-circle w3-hover-opacity"></a>
                <h4 class="w3-text-black">Feedbacks</h4>
            </div>
            <div class="col-lg-3 text-center">
                <a href="../Relatorios/Index"><img src="~/Images/Report.png" alt="Boss" style="width:20%" class="w3-circle w3-hover-opacity"></a>
                <h4 class="w3-text-black">Relatórios</h4>
            </div>
        </div>
    }
    else
    {
        <div class="row" style="margin-top:10%">
            <div class="col-lg-3 text-center">
            </div>
            <div class="col-lg-3 text-center">
                <a href="../Avaliacaos/Create"><img src="~/Images/Newchecklist.png" alt="Boss" style="width:20%" class="w3-circle w3-hover-opacity"></a>
                <h4 class="w3-text-black">Nova avaliação</h4>
            </div>
            <div class="col-lg-3 text-center">
                <a href="../Avaliacaos/IndexUsuario"><img src="~/Images/Checklist.png" alt="Boss" style="width:20%" class="w3-circle w3-hover-opacity"></a>
                <h4 class="w3-text-black">Avaliações de sistemas</h4>
            </div>
            <div class="col-lg-3 text-center">
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content text-center p-md">
                        <h2>
                            Para nós é muito importante saber sua opinião sobre a ferramenta de um modo geral.<br />
                            Clique <a href="../Feedbacks/Validacao" class="text-navy"><b>aqui</b></a> e nos conte sobre sua experiência!
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    }
}

