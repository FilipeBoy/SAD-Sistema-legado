@model Inspinia_MVC5.Models.MailModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SAD Sistemas Legados</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <style>
        .img {
            background-repeat: no-repeat;
            background-size: cover;
            background-image: url("/Images/wallpaper2.jpg");
            min-height: 100%;
        }
    </style>
</head>
<body class="img">
    <div class="passwordBox animated fadeInDown">
        <div class="row">
            <div class="col-md-12">
                <div class="ibox-content">
                    <h2 class="font-bold">Esqueceu sua senha?</h2>
                    <p>
                        Coloque o seu email abaixo que faremos uma nova senha e lhe enviaremos por email.
                    </p>
                    <div class="row">
                        <div class="col-lg-12">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <p style="color:red">@TempData["Mensagem"]</p>
                                <div class="m-t" role="form">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                        @Html.ValidationMessageFor(model => model.To, "", new { @class = "w3-text-red" })
                                    </div>
                                    @if (TempData["Mensagem"] != null)
                                    {
                                        <a href="../Usuarios/Login" class="btn btn-primary block full-width m-b">Entrar</a>
                                    }
                                    else
                                    {
                                        <input type="submit" value="Solicitar nova senha" class="btn btn-primary block full-width m-b" />
                                    }
                                </div>
                                <div>
                                    <a class="btn btn-sm btn-white btn-block w3-button" href="@Url.Action("Index", "Home")" style="font-size:15px">Cancelar</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



