@model Inspinia_MVC5.Models.Avaliacao

@{
    ViewBag.Title = "Delete";

}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Excluir Avaliação</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Voltar", "IndexUsuario", null, new { @class = "btn btn-white" })
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h4 class="text-danger">Deseja realmente excluir esta avaliação?</h4>
                </div>
                <div class="ibox-content">
                    <div class="dl-horizontal">
                        <div>
                            @Html.DisplayNameFor(model => model.Usuario.NOME) : @Html.DisplayFor(model => model.Usuario.NOME)
                        </div>
                        <br />
                        <div>
                            @Html.DisplayNameFor(model => model.NOME_SISTEMA) : @Html.DisplayFor(model => model.NOME_SISTEMA)
                        </div>
                        <br />
                        <div>
                            @Html.DisplayNameFor(model => model.DATA) : @Html.DisplayFor(model => model.DATA)
                        </div>
                        <br />
                        <div>
                            @Html.DisplayNameFor(model => model.STATUS) : @Html.DisplayFor(model => model.STATUS)
                        </div>
                        <br />
                        <div>
                            @Html.DisplayNameFor(model => model.RESULTADO) : @Html.DisplayFor(model => model.RESULTADO)
                        </div>
                        <br />
                        <div>
                            @Html.DisplayNameFor(model => model.AV_NOTA_FINAL) : @Html.DisplayFor(model => model.AV_NOTA_FINAL)
                        </div>
                        <br />
                        <br />
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value="Excluir" class="btn btn-primary" />
                            @Html.ActionLink("Voltar", "IndexUsuario", null, new { @class = "btn btn-white" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


