@model IEnumerable<Inspinia_MVC5.Models.Feedback>
@{
    ViewBag.Title = "Index";
}
@section Scripts {
    <link rel="stylesheet" type="text/css" href="../Content/DataTables/css/jquery.dataTables.min.css">
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" charset="utf8" src="../Content/DataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="../Content/DataTables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });
        });
    </script>
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Relatório de feedbacks</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table id="table" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Avaliacao.NOME_SISTEMA)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RESULTADO)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ESTRATEGIA_ADOTADA)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Avaliacao.NOME_SISTEMA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RESULTADO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ESTRATEGIA_ADOTADA)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Visualizar comentário", "Details", new { id = item.ID_AVALIACAO }, new { @class = "btn btn-primary btn-sm" })

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




