        <div class="col-lg-12 w3-center">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.NOME)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NOME)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SOBRENOME)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SOBRENOME)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.EMAIL)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EMAIL)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SENHA)
                        </dt>

                        <dd>
                            ********************
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CONFSENHA)
                        </dt>

                        <dd>
                            ********************
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="button-section">
                            <input type="submit" value="Excluir conta" class="btn btn-primary" />
                            <input type="button" class="btn btn-white" value="Cancelar" onClick="history.go(-1)">
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


















